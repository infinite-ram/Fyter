@page "/fighter/{Id:int}"
@rendermode InteractiveServer

<div class="mt-3">
    <FighterNameDetailComponent Fighter="@Fighter"/>

    <div class="row mt-5">
        <div class="col-12 col-md-5 order-1 order-md-2 mb-5">
            <div class="sticky-col">
                <div class="ctrl-panel mb-4">
                    <a href="/editfighter/@Fighter.FighterId" class="btn btn-primary btn-lg me-2 mb-2">
                        <i class="fa-solid fa-pencil me-2"></i>
                        Edit Fighter </a>

                    <FighterOutdatedStatsModalComponent Fighter="@Fighter" OnRefresh="Refresh"/>
                </div>

                <div class="mb-4">
                    <FighterGeneralInfoComponent Fighter="@Fighter"/>
                </div>
                <div class="row">
                    <div class="col mb-4">
                        <FighterPerksListDetailComponent Fighter="@Fighter"/>
                    </div>
                    <div class="col mb-4">
                        <FighterAlterEgoListDetailComponent Fighter="@Fighter"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 order-2 order-md-1">
            <div class="mb-5">
                <FighterPersonalInfoComponent Fighter="@Fighter"/>
            </div>

            <div class="mb-5">
                <FighterTopMovesDetailComponent Fighter="@Fighter"/>
            </div>

            <div class="mb-5">
                <FighterStandUpDetailComponent Fighter="@Fighter"/>
            </div>
            <div class="mb-5">
                <FighterGrapplingDetailComponent Fighter="@Fighter"/>
            </div>
            <div class="mb-5">
                <FighterHealthDetailComponent Fighter="@Fighter"/>
            </div>
        </div>
    </div>
</div>
