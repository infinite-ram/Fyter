<button type="button" class="btn btn-black btn-lg mb-2" @onclick="ShowOutdatedModal">
    <i class="fa-solid fa-flag me-2"></i>
    Mark Outdated Stats
</button>

@if (isOutdatedModalVisible)
{
    <div class="modal show d-block" tabindex="-1" >
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mark Outdated Stats</h5>
                    <button type="button" class="btn-close" @onclick="HideOutdatedModal"></button>
                </div>
               <div class="modal-body">
                    <h6>Select properties that need updating:</h6>
                    <div class="mb-2">
                        <button class="btn btn-sm btn-primary me-2" @onclick="SelectAll">Select All</button>
                        <button class="btn btn-sm btn-secondary" @onclick="DeselectAll">Deselect All</button>
                    </div>
                    @foreach (var propPath in allProps)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input"
                                   @bind="outdatedStatsViewModel.SelectedOutdatedStats[propPath].IsOutdated"
                                   @key="@propPath" />
                            <label class="form-check-label">@propPath</label>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="SaveOutdatedStatsAsync">Save</button>
                    <button class="btn btn-secondary" @onclick="HideOutdatedModal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
