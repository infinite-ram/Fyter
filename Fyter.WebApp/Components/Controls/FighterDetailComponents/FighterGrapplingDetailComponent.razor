@using Fyter.CoreBusiness.FighterModel
<h2 class="fw-bold mb-4">Grappling</h2>

@foreach (var statProp in typeof(Grappling).GetProperties())
{
    var statName = statProp.Name;
    var labelText = $"{statName}:";
    var ratingProp = $"Grappling.{statName}.Value";
    var starsRatingProp = $"Grappling.{statName}.Stars";

    <div class="mb-3">
        <FighterStarsAttributeComponent
            Fighter="@Fighter"
            Label="@labelText"
            Stars="@((statProp.GetValue(Fighter.Grappling) as Stat).Stars)"
            Value="@((statProp.GetValue(Fighter.Grappling) as Stat).Value)"
            StarsRatingOutdatedProp="@starsRatingProp"
            RatingOutdatedProp="@ratingProp" />
    </div>
}
