@using Fyter.CoreBusiness.FighterModel
<div class="dropdown btn-group me-3 mb-3 w-100" >
    <i class="bi bi-funnel-fill input-group-text" style="background-color: #d5d5d5;"></i>

    <button class="btn btn-primary dropdown-toggle w-100 text-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        @GetButtonLabel()
    </button>

    @if (selectedFighterStyle != null)
    {
        <i onclick="@Reset" class="bi bi-x-circle btn btn-secondary" style="border-top-right-radius: 5px; border-bottom-right-radius: 5px;"></i>
    }
    <ul class="dropdown-menu w-100">
        <li>
            <button type="button" class="dropdown-item" @onclick="() => OnSelectFighterStyle(null)">Fighter Style</button>
        </li>
        @foreach (var style in Enum.GetValues<FighterStyleEnum>())
        {
            <li>
                <button type="button" class="dropdown-item" @onclick="() => OnSelectFighterStyle(style)">
                    @style.GetDisplayName()
                </button>
            </li>
        }
    </ul>
</div>
